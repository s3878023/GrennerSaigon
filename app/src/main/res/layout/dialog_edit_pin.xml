<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/editPinTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Site"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/editSiteNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editPinTitleTextView"
        android:layout_marginTop="8dp"
        android:hint="New Site Name"
        android:inputType="text"/>

    <EditText
        android:id="@+id/editSiteDescriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editSiteNameEditText"
        android:layout_marginTop="8dp"
        android:hint="New Site Description"
        android:inputType="text"/>

    <EditText
        android:id="@+id/editSiteReportEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editSiteDescriptionEditText"
        android:layout_marginTop="8dp"
        android:hint="New Report"
        android:inputType="text"/>


</RelativeLayout>
